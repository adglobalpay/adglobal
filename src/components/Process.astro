---
const activeName = ""; // ej. "Zelle" para resaltarlo

const methods = [
  { name: "Zelle",           icon: "/public/zelle.svg",          color: "#6A1B9A", url: "https://www.zellepay.com/" },
  { name: "Cash App",        icon: "/public/cashapp.svg",        color: "#00C244", url: "https://cash.app/" },
  { name: "Venmo",           icon: "/public/venmo.svg",          color: "#3D95CE", url: "https://venmo.com/" },
  { name: "PayPal",          icon: "/public/paypal.svg",         color: "#003087", url: "https://www.paypal.com/" },
  { name: "Chase",           icon: "/public/chase.svg",          color: "#117ACA", url: "https://www.chase.com/" },
  { name: "Bofa",            icon: "/public/bofa.svg",  color: "#D4001A", url: "https://www.bankofamerica.com/" },
  { name: "Binance",         icon: "/public/binance.svg",        color: "#F3BA2F", url: "https://www.binance.com/" },
];
---

<div class="mt-10 flex flex-wrap justify-center gap-4">
  {methods.map((m) => {
    const isActive = m.name === activeName;

    return (
      <a
        href={m.url}
        target="_blank"
        rel="noopener noreferrer"
        title={`Ir a ${m.name} (sitio oficial)`}
        aria-label={m.name}
        class={
          "group inline-flex items-center gap-2 rounded-2xl border border-gray-200/70 bg-white px-4 py-2 " +
          "shadow-sm ring-1 ring-black/5 transition hover:-translate-y-0.5 hover:shadow-md " +
          "focus:outline-none focus:ring-2 " +
          (isActive ? "ring-2 " : "")
        }
        style={`--c:${m.color}`}
      >
        <!-- Logo real desde /public como máscara (toma el color dinámico) -->
        <span
          class={
            "grid h-8 w-8 place-items-center rounded-full bg-gray-100 text-gray-400 transition " +
            "group-hover:text-[var(--c)] " + (isActive ? "text-[var(--c)]" : "")
          }
        >
          <span
            class="block h-5 w-5 bg-current [mask-size:contain] [mask-repeat:no-repeat] [mask-position:center]"
            style={`-webkit-mask-image:url('${m.icon}'); mask-image:url('${m.icon}');`}
            aria-hidden="true"
          ></span>
        </span>

        <span class={"font-medium " + (isActive ? "text-gray-900" : "text-gray-700")}>
          {m.name}
        </span>

        {isActive && <span class="ml-2 h-0.5 w-6 rounded bg-[var(--c)]"></span>}
      </a>
    );
  })}
</div>
