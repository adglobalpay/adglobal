---
const links = [
  { href: "/", label: "INICIO" },
  { href: "/servicios", label: "SERVICIOS" },
  { href: "/referencias", label: "REFERENCIAS" },
  { href: "/blog", label: "BLOG" },
  { href: "/calculadora", label: "CALCULADORA" },
  { href: "/nosotros", label: "NOSOTROS" },
];
---
<header class="sticky top-0 z-40 bg-white/80 backdrop-blur border-b">
  <nav class="mx-auto flex max-w-6xl items-center justify-between px-4 py-3">
    <a href="/" class="flex items-center gap-2">
      <div class="h-8 w-8 rounded-lg bg-gray-900"></div>
      <span class="sr-only">Marca</span>
    </a>
    <ul class="hidden md:flex gap-6 text-sm font-medium">
      {links.map((l) => <li><a class="hover:text-gray-900 text-gray-600" href={l.href}>{l.label}</a></li>)}
    </ul>
    
  </nav>
</header>
