---
const whatsappNumber = "14482045984";
const wa = (service) =>
  `https://wa.me/${whatsappNumber}?text=${encodeURIComponent(
    `Hola, quiero información para operar con ${service}.`
  )}`;

// Coloca estos íconos en /public/icons/ (o cambia las rutas)
const services = [
  {
    key: "paypal",
    title: "PayPal a Bolívares",
    desc:
      "Cambia tu saldo PayPal y envia a bancos en Venezuela.",
    icon: "/public/paypal.svg",
    cta: "Cambiar PayPal",
  },
  {
    key: "cashapp",
    title: "Cash App a Bolívares",
    desc:
      "Recibimos tu saldo Cash App y lo convertimos en minutos con tasa competitiva.",
    icon: "/public/cashapp.svg",
    cta: "Vender Cash App",
  },
  {
    key: "binance",
    title: "Binance: USDT / BUSD",
    desc:
      "Compra o vende tus criptos. Operamos con stablecoins y liquidez inmediata.",
    icon: "/public/binance.svg",
    cta: "Vender Cryptos",
  },
  {
    key: "zelle",
    title: "Zelle a Bolívares",
    desc:
      "Convierte tu saldo Zelle y recibe en bancos de Venezuela en minutos.",
    icon: "/public/zelle.svg",
    cta: "Vender Zelle",
  },
  {
    key: "venmo",
    title: "Venmo a Bolívares",
    desc:
      "Aceptamos Venmo y te enviamos a tu cuenta bancaria en Venezuela rápidamente.",
    icon: "/public/venmo.svg",
    cta: "Vender Venmo",
  },
  {
    key: "giros",
    title: "Giros a Bancos USA (ACH/Wire/Deposit)",
    desc:
      "Envia directo a bancos en EE. UU. de forma segura y te cambiamos a Bolivares",
    icon: "/public/bank.svg",
    cta: "Solicitar Giro",
  },
];
---

<section id="servicios" class="relative py-16">
  <div class="mx-auto max-w-7xl px-6">
    <h2 class="text-center text-3xl md:text-5xl font-extrabold text-sky-700">
      Somos más que soluciones cambiarias
    </h2>

    <div
      class="mt-10 grid gap-6 sm:grid-cols-2 lg:grid-cols-3"
    >
      {services.map((s) => (
        <article
          class="rounded-3xl bg-white p-8 shadow-lg ring-1 ring-slate-100 transition hover:-translate-y-0.5 hover:shadow-xl"
        >
          <div class="flex justify-center">
            <img
              src={s.icon}
              alt={s.title}
              class="h-16 w-16 object-contain"
              loading="lazy"
            />
          </div>

          <h3 class="mt-6 text-center text-xl font-extrabold text-slate-800">
            {s.title}
          </h3>
          <p class="mt-3 text-center text-slate-600 leading-relaxed">
            {s.desc}
          </p>

          <div class="mt-6 flex justify-center">
            <a
              href={wa(s.title)}
              target="_blank"
              rel="noopener noreferrer"
              class="rounded-full px-6 py-3 text-sm font-bold text-white bg-blue-600 hover:opacity-90 transition shadow"
            >
              {s.cta}
            </a>
          </div>
        </article>
      ))}
    </div>
  </div>
</section>
